<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="remito">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-set="custom_header" t-value="'l10n_ar.custom_header'"/>
                        <t t-set="report_date" t-value="o.date_order"/>
                        <t t-set="document_letter" t-value="'R'"/>
                        <t t-set="document_legend" t-value="'Doc. no válido como factura'"/>
                        <t t-set="report_number" t-value="o.remito_number"/>
                        <t t-set="report_name" t-value="'REMITO'"/>
                        <t t-set="header_address" t-value="o.partner_id"/>
                        <table class="table table-sm" t-if="o.state!='done'" name="stock_move_table">
                            <thead>
                                <tr>
                                    <th name="th_sm_product"><strong>Producto</strong></th>
                                    <th name="th_sm_ordered"><strong>Cantidad</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="lines" t-value="o.order_line.filtered(lambda x: x.qty_delivered > 0)"/>
                                <tr t-foreach="lines" t-as="move">
                                    <td>
                                        <span t-field="move.product_id"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="move.qty_delivered"/>
                                        <span t-field="move.product_uom"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table name="stock_move_line_table" position="after">
                            <table class="table table-borderless table-sm">
                                <thead>
                                    <tr class="mt-4">
                                        <th width="25%">Recibí conforme:</th>
                                        <th width="25%"></th>
                                        <th width="25%"></th>
                                        <th width="25%"></th>
                                    </tr>
                                </thead>
                                <tbody >
                                    <tr class="pt-4">
                                        <th width="25%">Fecha: ____ / ____ / ____</th>
                                        <td><hr style="border: 1px solid #000000;"/></td>
                                        <td><hr style="border: 1px solid #000000;"/></td>
                                        <td><hr style="border: 1px solid #000000;"/></td>
                                    </tr>
                                    <tr class="pt-4">
                                        <td></td>
                                        <th style="text-align: center;">DNI</th>
                                        <th style="text-align: center;">Firma</th>
                                        <th style="text-align: center;">Aclaración</th>
                                    </tr>
                                </tbody>
                            </table>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    
    
    <record id="action_report_remito" model="ir.actions.report">
        <field name="name">Remito</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ar_remito_sale_order.remito</field>
        <field name="report_file">l10n_ar_remito_sale_order.remito</field>
        <field name="print_report_name">'Remito - %s - %s' % (object.partner_id.name or '', object.name)</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
